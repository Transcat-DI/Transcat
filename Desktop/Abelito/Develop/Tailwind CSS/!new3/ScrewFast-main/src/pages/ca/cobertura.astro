---
import MainLayout from "@/layouts/MainLayout.astro";
import CoverageMapSection from "@components/sections/misc/CoverageMapSection_ca.astro";
import { SITE } from "@data/constants";

// Define the metadata for the page
const title = "Cobertura | TransCar";
const description = "Descobreix la nostra cobertura de serveis a tot Espanya. Oferim serveis de transport i logística a les principals ciutats amb diferents radis de cobertura.";
---

<MainLayout title={title} customDescription={description} lang="ca">
  <style>
    /* Styles per a les targetes amb efecte de gir - versió millorada */
    .flip-card {
      perspective: 1000px;
      cursor: pointer;
      height: 16rem;
      width: 100%;
    }
    
    .flip-card-inner {
      position: relative;
      width: 100%;
      height: 100%;
      transition: transform 0.6s;
      transform-style: preserve-3d;
    }
    
    .flip-card:hover .flip-card-inner {
      transform: rotateY(180deg);
    }
    
    .flip-card-front, .flip-card-back {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      -webkit-backface-visibility: hidden !important;
      backface-visibility: hidden !important;
      border-radius: 0.75rem;
      overflow: hidden;
    }
    
    /* Assegurar que el davant és inicialment visible */
    .flip-card-front {
      z-index: 2;
      transform: rotateY(0deg);
    }
    
    /* Assegurar que el darrere està inicialment girat */
    .flip-card-back {
      transform: rotateY(180deg);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 0;
      text-align: center;
      background-size: cover;
      background-position: center;
      position: relative;
    }
    
    /* Overlay fosc per millorar la llegibilitat del text sobre les imatges */
    .flip-card-back::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: -1;
    }
  </style>
  <main class="flex-auto">
    <div id="hero">
      <CoverageMapSection />
    </div>
    
    <div id="services" class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <div class="text-center">
          <h2 class="text-2xl font-bold text-neutral-800 dark:text-neutral-200 md:text-3xl md:leading-tight">
            Serveis de Transport a Tot Espanya
          </h2>
          <p class="mt-4 text-pretty text-neutral-600 dark:text-neutral-400">
            Oferim serveis de transport i logística a les principals ciutats d'Espanya. 
            El nostre compromís és proporcionar solucions eficients i fiables per a totes les teves necessitats de transport.
          </p>
        </div>
        
        <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          <!-- Servei 1 - Transport Urbà -->
          <div class="flip-card">
            <div class="flip-card-inner shadow-md">
              <div class="flip-card-front border border-neutral-300 bg-white p-5 dark:border-neutral-700 dark:bg-neutral-800">
                <div class="mb-3 flex h-10 w-10 items-center justify-center rounded-lg bg-orange-100 text-orange-600 dark:bg-orange-900/30 dark:text-orange-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                  </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200">Transport Urbà</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  Servei de transport dins de les principals ciutats amb lliurament el mateix dia.
                </p>
              </div>
              <div class="flip-card-back border border-neutral-300 dark:border-neutral-700 p-0 overflow-hidden">
                <img src="/src/images/cards/01.webp" alt="" class="w-full h-full object-cover">
              </div>
            </div>
          </div>
          
          <!-- Servei 2 - Transport Programat -->
          <div class="flip-card">
            <div class="flip-card-inner shadow-md">
              <div class="flip-card-front border border-neutral-300 bg-white p-5 dark:border-neutral-700 dark:bg-neutral-800">
                <div class="mb-3 flex h-10 w-10 items-center justify-center rounded-lg bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#3b82f6" stroke-width="1.5" class="h-5 w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                  </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200">Transport Programat</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  Planifica els teus enviaments amb antelació per obtenir les millors tarifes i horaris.
                </p>
              </div>
              <div class="flip-card-back border border-neutral-300 dark:border-neutral-700 p-0 overflow-hidden">
                <img src="/src/images/cards/02.webp" alt="" class="w-full h-full object-cover">
              </div>
            </div>
          </div>
          
          <!-- Servei 3 - Transport Express -->
          <div class="flip-card">
            <div class="flip-card-inner shadow-md">
              <div class="flip-card-front border border-neutral-300 bg-white p-5 dark:border-neutral-700 dark:bg-neutral-800">
                <div class="mb-3 flex h-10 w-10 items-center justify-center rounded-lg bg-green-100 text-green-600 dark:bg-green-900/30 dark:text-green-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#22c55e" stroke-width="1.5" class="h-5 w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                  </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200">Transport Express</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  Servei urgent per a lliuraments que no poden esperar, amb temps de lliurament garantits.
                </p>
              </div>
              <div class="flip-card-back border border-neutral-300 dark:border-neutral-700 p-0 overflow-hidden">
                <img src="/src/images/cards/03.webp" alt="" class="w-full h-full object-cover">
              </div>
            </div>
          </div>
          
          <!-- Servei 4 - Logística Especialitzada -->
          <div class="flip-card">
            <div class="flip-card-inner shadow-md">
              <div class="flip-card-front border border-neutral-300 bg-white p-5 dark:border-neutral-700 dark:bg-neutral-800">
                <div class="mb-3 flex h-10 w-10 items-center justify-center rounded-lg bg-purple-100 text-purple-600 dark:bg-purple-900/30 dark:text-purple-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#9333ea" stroke-width="1.5" class="h-5 w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
                  </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200">Logística Especialitzada</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  Solucions a mida per a mercaderies que requereixen condicions especials de transport.
                </p>
              </div>
              <div class="flip-card-back border border-neutral-300 dark:border-neutral-700 p-0 overflow-hidden">
                <img src="/src/images/cards/04.webp" alt="" class="w-full h-full object-cover">
              </div>
            </div>
          </div>
          
          <!-- Servei 5 - Emmagatzematge i Distribució -->
          <div class="flip-card">
            <div class="flip-card-inner shadow-md">
              <div class="flip-card-front border border-neutral-300 bg-white p-5 dark:border-neutral-700 dark:bg-neutral-800">
                <div class="mb-3 flex h-10 w-10 items-center justify-center rounded-lg bg-yellow-100 text-yellow-600 dark:bg-yellow-900/30 dark:text-yellow-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0l4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0l-5.571 3-5.571-3" />
                  </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200">Emmagatzematge i Distribució</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  Gestió integral de la teva cadena de subministrament amb emmagatzematge i distribució eficient.
                </p>
              </div>
              <div class="flip-card-back border border-neutral-300 dark:border-neutral-700 p-0 overflow-hidden">
                <img src="/src/images/cards/05.webp" alt="" class="w-full h-full object-cover">
              </div>
            </div>
          </div>
          
          <!-- Servei 6 - Transport Internacional -->
          <div class="flip-card">
            <div class="flip-card-inner shadow-md">
              <div class="flip-card-front border border-neutral-300 bg-white p-5 dark:border-neutral-700 dark:bg-neutral-800">
                <div class="mb-3 flex h-10 w-10 items-center justify-center rounded-lg bg-teal-100 text-teal-600 dark:bg-teal-900/30 dark:text-teal-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#14b8a6" stroke-width="1.5" class="h-5 w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                  </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200">Transport Internacional</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  Connectem Espanya amb la resta d'Europa i el món amb solucions logístiques internacionals.
                </p>
              </div>
              <div class="flip-card-back border border-neutral-300 dark:border-neutral-700 p-0 overflow-hidden">
                <img src="/src/images/cards/06.webp" alt="" class="w-full h-full object-cover">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</MainLayout>
