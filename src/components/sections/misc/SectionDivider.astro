---
// Componente para crear un separador visual entre secciones
interface Props {
  phrase?: string;
  highlightedEnd?: string;
  withWaves?: boolean;
  withGradient?: boolean;
  className?: string;
}

const { 
  phrase = "Transporte profesional", 
  highlightedEnd = "de confianza", 
  withWaves = true, 
  withGradient = true,
  className = ""
} = Astro.props;
---

<div class={`w-full py-10 md:py-16 relative ${className}`}>
  {withGradient && (
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-yellow-500/10 to-transparent dark:via-yellow-400/10 z-0"></div>
  )}
  
  <div class="relative z-10 flex flex-col items-center justify-center">
    <!-- Frase con final destacado -->
    <div class="w-full max-w-5xl mx-auto px-4 flex items-center justify-center">
      <h3 class="text-2xl md:text-3xl font-bold text-neutral-800 dark:text-neutral-200 text-center">
        {phrase} <span class="text-yellow-500 dark:text-yellow-400">{highlightedEnd}</span>
      </h3>
    </div>
    
    <!-- PatrÃ³n de ondas decorativo -->
    {withWaves && (
      <div class="w-full max-w-md mx-auto mt-6 opacity-30 dark:opacity-20">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 100" class="w-full h-auto">
          <path 
            fill="currentColor" 
            fill-opacity="1" 
            class="text-yellow-500 dark:text-yellow-400"
            d="M0,32L60,37.3C120,43,240,53,360,58.7C480,64,600,64,720,53.3C840,43,960,21,1080,16C1200,11,1320,21,1380,26.7L1440,32L1440,100L1380,100C1320,100,1200,100,1080,100C960,100,840,100,720,100C600,100,480,100,360,100C240,100,120,100,60,100L0,100Z">
          </path>
        </svg>
      </div>
    )}
  </div>
</div>
