---
// Componente para crear un separador visual con una línea de ruta
interface Props {
  title?: string;
  highlightedEnd?: string;
  description?: string;
  className?: string;
}

const { 
  title = "De origen a destino", 
  highlightedEnd = "sin preocupaciones", 
  description = "Tu carga en las mejores manos, con la garantía de un servicio profesional.",
  className = ""
} = Astro.props;
---

<div class={`py-12 relative ${className}`}>
  <div class="max-w-4xl mx-auto px-4">
    <div class="flex items-center justify-center mb-8">
      <div class="w-3 h-3 rounded-full bg-orange-500"></div>
      <div class="h-1 flex-grow bg-gradient-to-r from-orange-500 via-yellow-500 to-orange-500"></div>
      <div class="w-3 h-3 rounded-full bg-orange-500"></div>
    </div>
    <div class="text-center">
      <h3 class="text-2xl md:text-3xl font-bold text-neutral-800 dark:text-neutral-200">
        {title} <span class="text-yellow-500 dark:text-yellow-400">{highlightedEnd}</span>
      </h3>
      <p class="mt-4 text-neutral-600 dark:text-neutral-400">
        {description}
      </p>
    </div>
  </div>
</div>
