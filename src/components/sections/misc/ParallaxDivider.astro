---
// Componente para crear un separador con efecto parallax minimalista
interface Props {
  title?: string;
  highlightedEnd?: string;
  description?: string;
  className?: string;
}

const { 
  title = "Transporte", 
  highlightedEnd = "sin límites", 
  description = "Servicio personalizado que se adapta a tus necesidades específicas.",
  className = ""
} = Astro.props;
---

<div class={`py-16 relative bg-neutral-100 dark:bg-neutral-800 overflow-hidden ${className}`}>
  <div class="absolute inset-0 opacity-5">
    <div class="absolute bottom-0 left-0 w-24 h-12">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" class="text-orange-500 dark:text-orange-400 w-full h-full">
