---
// Componente para crear un separador visual con texto e imágenes de íconos animadas
import TruckImageIcons from "@components/ui/icons/TruckImageIcons.astro";

interface Props {
  title?: string;
  subTitle?: string;
  showIcons?: boolean;
  className?: string;
}

const { 
  title = "Compromiso con la excelencia", 
  subTitle = "Profesionalidad y puntualidad en cada servicio", 
  showIcons = true,
  className = ""
} = Astro.props;
---

<div class={`w-full py-12 md:py-16 relative ${className}`}>
  
  <div class="relative z-10 max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 2xl:max-w-full">
    <div class="text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-neutral-800 dark:text-neutral-200 mb-2">
        {title}
      </h2>
      
      {subTitle && (
        <p class="text-neutral-600 dark:text-neutral-400 text-lg max-w-3xl mx-auto">
          {subTitle}
        </p>
      )}
      
      {showIcons && (
        <div class="mt-3">
          <TruckImageIcons className="py-2" />
        </div>
      )}
    </div>
  </div>
</div>
