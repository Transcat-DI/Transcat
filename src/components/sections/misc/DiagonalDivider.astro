---
// Componente para crear un separador visual con una cinta diagonal
interface Props {
  title?: string;
  highlightedEnd?: string;
  description?: string;
  className?: string;
}

const { 
  title = "Conectando rutas,", 
  highlightedEnd = "uniendo destinos", 
  description = "La log√≠stica perfecta para tus necesidades de transporte.",
  className = ""
} = Astro.props;
---

<div class={`py-12 relative ${className}`}>
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -inset-y-1/2 -inset-x-1/4 bg-orange-500/10 dark:bg-orange-400/10 transform rotate-12"></div>
  </div>
  <div class="relative z-10 text-center max-w-3xl mx-auto px-4 py-8">
    <h3 class="text-2xl md:text-3xl font-bold text-neutral-800 dark:text-neutral-200">
      {title} <span class="text-yellow-500 dark:text-yellow-400">{highlightedEnd}</span>
    </h3>
    <p class="mt-4 text-neutral-600 dark:text-neutral-400">
      {description}
    </p>
  </div>
</div>
