---
// Import the necessary dependencies.
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";
import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";
import Icon from "@components/ui/icons/Icon.astro";
import SocialMediaLinks from "@components/ui/blocks/SocialMediaLinks.astro";

// Define the variables that will be used in this component
const title: string = "Contact";
const subTitle: string =
  "Do you have questions or need a transport service? Contact me and let's find the perfect logistics solution for your needs.";
const formTitle: string = "Complete the form";
const formSubTitle: string = "I will respond within 1-2 business days.";
---

<!-- Contact Us -->
<section id="contacto" class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
      >
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8 shadow-xl shadow-black/30 dark:shadow-xl dark:shadow-black/30">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
          {formTitle}
        </h2>
        <!-- Form for user input with various input fields.-->
        <!-- Each field utilizes a different input component for the specific type of input (text, email, phone, and textarea)-->
        <form action="https://formsubmit.co/carmen_consta@yahoo.com" method="POST" id="contact-form">
          <!-- Hidden fields for FormSubmit configuration -->
          <input type="hidden" name="_subject" value="New contact message from TransCar website">
          <input type="hidden" name="_template" value="table">
          <input type="hidden" name="_captcha" value="false">
          <input type="hidden" name="_honey" value="">
          
          <!-- Form status -->
          <div id="form-status" class="mb-4 hidden">
            <div id="sending-message" class="rounded-md bg-blue-100 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-blue-800">Sending message, please wait...</p>
                </div>
              </div>
            </div>
            <div id="success-message" class="hidden rounded-md bg-green-100 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-green-800">Message sent successfully! We will respond as soon as possible.</p>
                </div>
              </div>
            </div>
            <div id="error-message" class="hidden rounded-md bg-red-100 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-red-800">There was a problem sending your message. Please try again.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <label for="nombre" class="sr-only">First Name</label>
                <input type="text" name="nombre" id="nombre" class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-500 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:placeholder:text-neutral-400 dark:focus:ring-1" placeholder="First Name" required>
              </div>
              <div>
                <label for="apellidos" class="sr-only">Last Name</label>
                <input type="text" name="apellidos" id="apellidos" class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-500 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:placeholder:text-neutral-400 dark:focus:ring-1" placeholder="Last Name" required>
              </div>
            </div>
            <div>
              <label for="email" class="sr-only">Email</label>
              <input type="email" name="email" id="email" class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-500 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:placeholder:text-neutral-400 dark:focus:ring-1" placeholder="Email" required>
            </div>
            <div>
              <label for="telefono" class="sr-only">Phone</label>
              <input type="tel" name="telefono" id="telefono" class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-500 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:placeholder:text-neutral-400 dark:focus:ring-1" placeholder="Phone">
            </div>
            <div>
              <label for="mensaje" class="sr-only">Service Details</label>
              <textarea name="mensaje" id="mensaje" rows="4" class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-500 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:placeholder:text-neutral-400 dark:focus:ring-1" placeholder="Service Details" required></textarea>
            </div>
          </div>

          <div class="mt-4 grid">
            <button type="submit" class="inline-flex items-center justify-center gap-x-2 rounded-lg border border-transparent bg-orange-500 px-4 py-3 text-sm font-semibold text-white hover:bg-orange-600 disabled:pointer-events-none disabled:opacity-50 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600">
              Send Message
            </button>
          </div>

          <div class="mt-3 text-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {formSubTitle}
            </p>
          </div>
          
          <!-- Success/error message initially hidden -->
          <div id="form-status" class="mt-4 hidden">
            <div id="success-message" class="hidden rounded-md bg-green-100 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-green-800">Message sent successfully! We will respond as soon as possible.</p>
                </div>
              </div>
            </div>
            <div id="error-message" class="hidden rounded-md bg-red-100 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-red-800">There was a problem sending your message. Please try again.</p>
                </div>
              </div>
            </div>
          </div>
        </form>
        
        <script>
          const contactForm = document.getElementById('contact-form');
          if (contactForm) {
            contactForm.addEventListener('submit', function(event) {
              event.preventDefault();
              
              const form = this;
              const formData = new FormData(form);
              const formStatus = document.getElementById('form-status');
              const successMessage = document.getElementById('success-message');
              const errorMessage = document.getElementById('error-message');
              
              fetch(form.action, {
                method: form.method,
                body: formData,
                headers: {
                  'Accept': 'application/json'
                }
              })
              .then(response => {
                if (formStatus) formStatus.classList.remove('hidden');
                if (response.ok) {
                  form.reset();
                  if (successMessage) successMessage.classList.remove('hidden');
                  if (errorMessage) errorMessage.classList.add('hidden');
                } else {
                  response.json().then(data => {
                    if (Object.hasOwn(data, 'errors')) {
                      console.error(data.errors);
                    }
                  });
                  if (errorMessage) errorMessage.classList.remove('hidden');
                  if (successMessage) successMessage.classList.add('hidden');
                }
              })
              .catch(error => {
                if (formStatus) formStatus.classList.remove('hidden');
                if (errorMessage) errorMessage.classList.remove('hidden');
                if (successMessage) successMessage.classList.add('hidden');
                console.error('Error:', error);
              });
            });
          }
        </script>
      </div>

      <!--ContactIconBlocks are used to display different methods of contacting, including visiting office, email, browsing knowledgebase, and FAQ.-->
      <div class="divide-y divide-neutral-300 dark:divide-neutral-700">
        <ContactIconBlock
          heading="Social Media"
          content="Follow us on our social media to stay updated."
          isLinkVisible={false}
        >
          <div class="text-neutral-600 dark:text-white/70 opacity-90">
            <Icon name="socialMedia" class="h-8 w-8 fill-neutral-600 text-neutral-600 dark:fill-white/70 dark:text-white/70 opacity-90" />
          </div>
          <div slot="additional-content" class="mt-2">
            <SocialMediaLinks />
          </div>
        </ContactIconBlock>

        <ContactIconBlock
          heading="Contact Phones"
          content="Landline: +34 663 528 406"
          isLinkVisible={true}
          linkTitle="Call Now"
          linkURL="tel:+34663528406"
          isArrowVisible={false}
          ><div class="text-neutral-600 dark:text-white/70 opacity-90">
            <Icon name="phone" class="h-8 w-8 fill-neutral-600 text-neutral-600 dark:fill-white/70 dark:text-white/70 opacity-90" />
          </div>
          <div slot="additional-content" class="mt-2">
            <a 
              href="https://wa.me/34663528406" 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center gap-x-2 rounded-lg text-sm font-medium text-zinc-600 outline-hidden ring-zinc-500 transition duration-300 hover:text-zinc-800 focus-visible:ring-3 dark:text-zinc-400 dark:ring-zinc-200 dark:hover:text-zinc-200 dark:focus:outline-hidden dark:focus:ring-1"
            >
              <Icon name="whatsappContact" class="h-5 w-5 fill-neutral-600 text-neutral-600 dark:fill-white/70 dark:text-white/70 opacity-90" />
              <span>Contact via WhatsApp</span>
            </a>
          </div>
        </ContactIconBlock>

        <ContactIconBlock
          heading="Visit our office"
          content="TransCar"
          isAddressVisible={true}
          addressContent="Amposta, Tarragona, EspaÃ±a."
          ><div class="text-neutral-600 dark:text-white/70 opacity-90">
            <Icon name="mapPin" class="h-8 w-8" />
          </div>
        </ContactIconBlock>

        <ContactIconBlock
          heading="Contact by email"
          content="Prefer to write to us? Send us an email at"
          isLinkVisible={true}
          linkTitle="carmen_consta@yahoo.com"
          linkURL="#"
          ><div class="text-neutral-600 dark:text-white/70 opacity-90">
            <Icon name="envelopeOpen" class="h-8 w-8" />
          </div>
        </ContactIconBlock>
      </div>
    </div>
  </div>
</section>

<!-- Google Maps Section -->
<section class="mx-auto max-w-[85rem] px-4 pb-10 sm:px-6 lg:px-8 lg:pb-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="overflow-hidden rounded-xl border border-neutral-200 p-1.5 dark:border-neutral-700 shadow-xl shadow-black/30 dark:shadow-xl dark:shadow-black/30">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12097.760128435566!2d0.5678078712783113!3d40.708328708140485!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a0fe73e6ca863b%3A0x1f27f3cf79a6d7b2!2s43870%20Amposta%2C%20Tarragona%2C%20Espa%C3%B1a!5e0!3m2!1ses!2snl!4v1748553345268!5m2!1ses!2snl"
        width="100%"
        height="500"
        style="border:0; display: block; width: 100%; height: 100%; min-height: 500px;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="rounded-lg w-full h-full"
        title="Location of our office"
      ></iframe>
    </div>
  </div>
</section>
</section>
