---
import { Image } from "astro:assets";
import dashboardImage from "@images/dashboard-image.avif";
import StatsCards from "@components/admin/StatsCards.astro";
import RecentActivity from "@components/admin/RecentActivity.astro";
import ContentEditor from "@components/admin/ContentEditor.astro";
---

<div
  id="dashboard-modal"
  class="hs-overlay hidden w-full h-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto inset-0"
  data-hs-overlay-keyboard="false"
>
  <div class="hs-overlay-open:mt-0 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-full w-full h-full sm:mx-auto">
    <div class="flex flex-col h-screen w-full bg-white dark:bg-gray-800 shadow-lg">
      <!-- Header -->
      <div class="flex justify-between items-center py-3 px-4 border-b dark:border-gray-700">
        <h3 class="font-bold text-gray-800 dark:text-white">
          Panel de Administración
        </h3>
        <button type="button" class="flex justify-center items-center w-7 h-7 text-sm font-semibold rounded-full border border-transparent text-gray-800 hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white dark:hover:bg-gray-700 dark:focus:outline-none" data-hs-overlay="#dashboard-modal">
          <span class="sr-only">Cerrar</span>
          <svg class="flex-shrink-0 w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
        </button>
      </div>

      <!-- Body -->
      <div class="p-4 overflow-y-auto flex-grow">
        <div class="max-w-7xl mx-auto">
          <h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Panel de Control</h1>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <!-- Stats Cards -->
            <StatsCards />
          </div>
          
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-6">
            <!-- Recent Activity -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Actividad Reciente</h2>
              <RecentActivity />
            </div>
            
            <!-- Welcome Card -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 flex flex-col">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Bienvenido al Panel de Administración</h2>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                Desde aquí puedes gestionar todos los aspectos de tu sitio web multilingüe. Utiliza las diferentes secciones para editar contenido, revisar estadísticas y monitorear la actividad reciente.
              </p>
              <div class="mt-auto">
                <Image 
                  src={dashboardImage} 
                  alt="Dashboard illustration" 
                  class="rounded-lg w-full h-auto object-cover"
                  width={500}
                  height={300}
                />
              </div>
            </div>
          </div>
          
          <!-- Content Editor Section -->
          <div class="mt-6 bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <ContentEditor />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
