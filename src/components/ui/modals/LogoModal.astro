---
import diLogo from "@images/logos/di-logo.png";
---

<div id="logo-modal" class="fixed inset-0 z-50 hidden overflow-y-auto overflow-x-hidden backdrop-blur-sm bg-white/20 dark:bg-black/20">
  <div class="flex min-h-full items-center justify-center p-4 text-center">
    <div class="relative transform overflow-hidden rounded-lg bg-white/95 p-5 text-left shadow-xl transition-all dark:bg-neutral-800/95 sm:my-8 sm:w-full sm:max-w-lg">
      <div class="absolute right-0 top-0 hidden pr-4 pt-4 sm:block">
        <button type="button" class="logo-close-button rounded-md bg-white text-neutral-400 hover:text-neutral-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 dark:bg-neutral-800 dark:text-neutral-300 dark:hover:text-neutral-200">
          <span class="sr-only">Cerrar</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="sm:flex sm:items-start">
        <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left w-full">
          <h3 class="text-xl font-bold leading-6 text-neutral-900 dark:text-white" id="modal-title">Digitalización Integral</h3>
          <div class="mt-4 flex justify-center">
            <img src={diLogo.src} alt="Digitalización Integral" class="max-w-full h-auto" />
          </div>
          <div class="mt-4 text-neutral-700 dark:text-neutral-300 text-center">
            <p class="mb-3">Especialistas en Transformación Digital para Empresas y PyMES</p>
            <p class="text-sm">Visita <a href="#" class="text-orange-500 hover:underline">www.digitalizacionintegral.es</a> para más información.</p>
          </div>
        </div>
      </div>
      <div class="mt-4 flex justify-center">
        <button type="button" class="logo-close-button inline-flex items-center justify-center rounded-md bg-orange-500 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-600 transition-colors duration-200">
          Cerrar
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const logoLinks = document.querySelectorAll('.logo-link');
    const logoModal = document.getElementById('logo-modal');
    const logoCloseButtons = document.querySelectorAll('.logo-close-button');
    
    function openLogoModal() {
      logoModal?.classList.remove('hidden');
      document.body.classList.add('overflow-hidden');
    }
    
    function closeLogoModal() {
      logoModal?.classList.add('hidden');
      document.body.classList.remove('overflow-hidden');
    }
    
    logoLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        openLogoModal();
      });
    });
    
    logoCloseButtons.forEach(button => {
      button.addEventListener('click', closeLogoModal);
    });
    
    // Cerrar al hacer clic fuera del contenido del modal
    logoModal?.addEventListener('click', (e) => {
      if (e.target === logoModal) {
        closeLogoModal();
      }
    });
    
    // Cerrar con la tecla Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && logoModal && !logoModal.classList.contains('hidden')) {
        closeLogoModal();
      }
    });
  });
</script>
