          </div>
        </div>
      </div>
      <div class="mt-4 flex justify-center">
        <button type="button" class="download-close-button inline-flex items-center justify-center rounded-md bg-orange-500 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-600 transition-colors duration-200">
          Tancar
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const downloadLinks = document.querySelectorAll('.download-link');
    const downloadModal = document.getElementById('download-modal');
    const downloadCloseButtons = document.querySelectorAll('.download-close-button');
    
    function openDownloadModal() {
      downloadModal?.classList.remove('hidden');
      document.body.classList.add('overflow-hidden');
    }
    
    function closeDownloadModal() {
      downloadModal?.classList.add('hidden');
      document.body.classList.remove('overflow-hidden');
    }
    
    downloadLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        openDownloadModal();
      });
    });
    
    downloadCloseButtons.forEach(button => {
      button.addEventListener('click', closeDownloadModal);
    });
    
    // Tancar en fer clic fora del contingut del modal
    downloadModal?.addEventListener('click', (e) => {
      if (e.target === downloadModal) {
        closeDownloadModal();
      }
    });
    
    // Tancar amb la tecla Esc
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && downloadModal && !downloadModal.classList.contains('hidden')) {
        closeDownloadModal();
      }
    });
  });
</script>
