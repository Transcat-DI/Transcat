---
const { class: className, ...props } = Astro.props;
import truckImage from "@images/logos/icon.png";
---

<svg
  class={`${className || ''}`}
  viewBox="0 0 600 150"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  {...props}
>
  <!-- Logo principal -->
  <g class="fill-current text-neutral-800 dark:text-neutral-100">
    <!-- TRANSCAR texto principal -->
    <text 
      x="300" 
      y="85" 
      text-anchor="middle" 
      class="fill-current text-neutral-800 dark:text-neutral-100"
      style="font-size: 70px; font-family: Arial, sans-serif; font-weight: 700; letter-spacing: 2px;"
    >
      TRANSCAR
    </text>
  </g>

  <!-- Subtítulo "Transporte y Logística" más amplio -->
  <text 
    x="300" 
    y="115" 
    text-anchor="middle" 
    class="fill-current text-neutral-600 dark:text-neutral-400"
    style="font-size: 23px; font-family: Arial, sans-serif; font-weight: 500; letter-spacing: 3px; text-transform: uppercase;"
  >
    Transporte y Logística
  </text>

  <!-- Imagen PNG del camión -->
  <image href={truckImage.src} x="510" y="50" width="70" height="70" preserveAspectRatio="xMidYMid meet" />
</svg>
