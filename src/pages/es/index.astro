---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ContactSection_es from "../../components/sections/misc/ContactSection_es.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import AboutSection from "@components/sections/about/AboutSection.astro";
import SectionDivider from "@components/sections/misc/SectionDivider.astro";
import BlackBannerDivider from "@components/sections/misc/BlackBannerDivider.astro";
import GeometricDivider from "../../components/sections/misc/GeometricDivider.astro";
import RouteDivider from "../../components/sections/misc/RouteDivider.astro";
import ParallaxDivider from "../../components/sections/misc/ParallaxDivider.astro";
import DiagonalDivider from "../../components/sections/misc/DiagonalDivider.astro";
import IconsDivider from "../../components/sections/misc/IconsDivider.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import ParallaxBanner from "@components/sections/misc/ParallaxBanner.astro";
import DownloadModal from "@components/ui/modals/DownloadModal.astro";

import heroImage from "@images/hero-image.avif";
import faqs from "../../data_files/es/faqs.json";
import statsImage from "@images/stats/stats.jpg";
import features from "../../data_files/es/features.json";
import pricing from "../../data_files/es/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import service1 from "@images/services/service-1.webp";
import service2 from "@images/services/service-2.webp";
import service3 from "@images/services/service-3.webp";
import service4 from "@images/services/service-4.webp";
import { partnersData } from "@/data_files/constants";

import testimonial1 from "@images/testimonials/01-samantha.jpg";
import testimonial2 from "@images/testimonials/02-carlos.jpg";
import testimonial3 from "@images/testimonials/03-elena.jpg";
import testimonial4 from "@images/testimonials/04-miguel.jpg";
import testimonial5 from "@images/testimonials/05-laura.jpg";

// Usando imágenes locales para los avatares del hero section
// Convertimos los objetos ImageMetadata a strings para el componente HeroSection
const avatarSrcs = [testimonial1.src, testimonial2.src, testimonial3.src, testimonial4.src];
---

<MainLayout lang="es">

  <div id="hero">
    <HeroSection
      title=`Lo llevamos del punto<br/> "A" al punto <span class="text-yellow-500 dark:text-yellow-400">¡Hecho!</span>`
      subTitle="Soluciones de transporte rápidas y seguras en Cataluña. Confía en una logística ágil, sin desvíos y con cobertura regional."
      primaryBtn="Servicios"
      primaryBtnURL="#services"
      secondaryBtn="Contáctame"
      secondaryBtnURL="#contact"
      withReview={false}
      src={heroImage.src}
      alt="Servicios de transporte en Cataluña"
      slideTitles={[
        `Lo llevamos del punto<br/> "A" al punto <span class="text-yellow-500 dark:text-yellow-400">¡Hecho!</span>`,
        `Cada ruta, una<br/>misión <span class="text-yellow-500 dark:text-yellow-400">cumplida.</span>`,
        `Donde la confianza<br/>también <span class="text-yellow-500 dark:text-yellow-400">viaja.</span>`,
        `Directo, rápido y<br/>con sello <span class="text-yellow-500 dark:text-yellow-400">catalán.</span>`,
        `Soluciones a tu medida<br/> en cada <span class="text-yellow-500 dark:text-yellow-400">envío.</span>`,
        `Más que transporte,<br/>compañía en el <span class="text-yellow-500 dark:text-yellow-400">camino.</span>`
      ]}
      slideSubtitles={[
        "Soluciones de transporte rápidas y seguras en Cataluña. Confía en una logística ágil, sin desvíos y con cobertura regional.",
        "Profesionalidad y compromiso en cada kilómetro. Confía en un servicio de transporte que cumple lo que promete, sin excusas ni retrasos.",
        "Cercano, responsable y siempre a tu servicio. Transporte personalizado con la garantía de alguien que cuida tu carga como si fuera propia.",
        "Transporte de mercancías desde Tarragona y Barcelona con compromiso, puntualidad y trato cercano.",
        "Adaptabilidad y flexibilidad para cubrir tus necesidades logísticas, sin importar el tamaño o destino de tu carga.",
        "Tu tranquilidad es nuestro destino. Servicio cercano, seguro y siempre a tiempo para que tu carga llegue como debe."
      ]}
    />
  </div>

  {/* Espacio de separación entre secciones */}
  <div class="py-6 md:py-8"></div>

  <div id="testimonials">
    <ClientsSection
      title="Confianza de Grandes Clientes"
      subTitle=" Mi compromiso con un servicio eficiente y responsable."
      partners={partnersData}
    />
  </div>

  <div id="about">
    <AboutSection
      title="Acerca de mis Servicios"
      subTitle="Hola!, soy Carmen Constantín, transportista profesional comprometida con la excelencia. Ofrezco soluciones de transporte eficientes y confiables para empresas y particulares en todo el territorio español y parte de Francia. Me especializo en el traslado de mercancías paletizadas, cargas completas o parciales, y entregas puerta a puerta. En cada trayecto, pongo a disposición mi compromiso, mi conocimiento de la carretera y un servicio de transporte que cumple con lo que promete."
      features={features}
    />
  </div>

  <!-- Separador visual con íconos SVG animados entre secciones -->
  <BlackBannerDivider 
    title={`Confianza en <span class="text-yellow-500 dark:text-yellow-400">Cada Kilómetro</span>`}
    subTitle="Tu carga, mi compromiso. Seguridad, puntualidad y control en todo momento"
    showIcons={true}
  />

  <div id="services">
    <FeaturesNavs
      title=`Servicios de <span class="text-yellow-500 dark:text-yellow-400">Transporte Profesional</span> adaptados a tus necesidades logísticas<br/>en Cataluña.`
      tabs={[
      {
        heading: "Transporte de Mercancías",
        content:
          "Servicio de transporte de mercancías general para empresas y particulares. Garantizamos entregas puntuales y seguras de todo tipo de productos, desde pequeños paquetes hasta cargas completas.",
        svg: "truck",
        src: service1,
        alt: "Camión de transporte de mercancías en carretera",
        first: true,
      },
      {
        heading: "Logística Urgente",
        content:
          "Soluciones de transporte urgente para envíos que no pueden esperar. Ofrecemos recogida inmediata y entrega en el mismo día para situaciones donde el tiempo es crucial, con seguimiento en tiempo real de su envío.",
        svg: "clock",
        src: service2,
        alt: "Entrega urgente de paquetería",
        second: true,
      },
      {
        heading: "Distribución Programada",
        content:
          "Servicio de distribución regular y programada para negocios con necesidades recurrentes. Establecemos rutas optimizadas y horarios fijos adaptados a su operativa, reduciendo costes y mejorando la eficiencia logística.",
        svg: "list",
        src: service3,
        alt: "Planificación de rutas de distribución",
      },
      {
        heading: "Transporte Especializado",
        content:
          "Servicio de transporte especializado para mercancías que requieren condiciones específicas. Ofrecemos soluciones a medida para productos frágiles, voluminosos o que necesitan temperatura controlada, garantizando su integridad durante todo el trayecto.",
        svg: "diploma",
        src: service4,
        alt: "Transporte especializado con condiciones específicas",
      },
    ]}
  />

  <div id="clientes">
  <TestimonialsSection
    title="Confianza ganada en Carretera"
    subTitle="Cada testimonio es una ruta compartida. Descubre lo que nuestros clientes dicen sobre el trato, el servicio y la experiencia de trabajar con TransCar."
    testimonials={[
      {
        content:
          "TransCar aumentó dramáticamente la eficiencia de nuestro proyecto. La configuración fue instantánea y sus tiempos de respuesta rápidos son fenomenales. ¡Verdaderamente un cambio de juego en el soporte de transporte y logística!",
        author: "Samantha Ruiz",
        role: "Directora de Operaciones | LogísticaTotal S.A.",
        avatarSrc: testimonial1,
      },
      {
        content:
          "Como empresa de distribución de productos perecederos, necesitábamos un servicio de transporte confiable y puntual. Carmen ha superado todas nuestras expectativas, manteniendo la cadena de frío intacta y cumpliendo siempre con los horarios acordados.",
        author: "Carlos Mendoza",
        role: "Gerente de Logística | FreshMarket",
        avatarSrc: testimonial2,
      },
      {
        content:
          "La flexibilidad y capacidad de adaptación de Carmen han sido cruciales para nuestro negocio. Cuando necesitamos cambios de última hora o entregas urgentes, siempre encuentra la manera de solucionarlo. Un socio logístico en quien realmente podemos confiar.",
        author: "Elena Martínez",
        role: "Propietaria | Muebles Martínez",
        avatarSrc: testimonial3,
      },
      {
        content:
          "Trabajamos con varios transportistas antes de encontrar a Carmen. La diferencia es notable: comunicación constante, cuidado excepcional de la mercancía y un servicio personalizado que entiende perfectamente las necesidades de nuestra industria.",
        author: "Miguel Ángel Sánchez",
        role: "Director | Cerámicas Artesanales S.L.",
        avatarSrc: testimonial4,
      },
      {
        content:
          "Como empresa de e-commerce, la rapidez en las entregas es fundamental para nosotros. Carmen no solo cumple con los plazos, sino que su profesionalidad y trato cercano han mejorado significativamente la experiencia de nuestros clientes finales.",
        author: "Laura Gómez",
        role: "Responsable de Envíos | TechShop Online",
        avatarSrc: testimonial5,
      },
    ]}
    statistics={[
      {
        count: "70+",
        description:
          "Clientes equipados — desde pequeñas empresas hasta grandes compañías de logística",
      },
      {
        count: "35%",
        description:
          "Aumento en la eficiencia de proyectos con las herramientas y servicios de TransCar",
      },
      {
        count: "15.3%",
        description:
          "Reducción en costos de mantenimiento reportados por clientes a largo plazo",
      },
      {
        count: "2x",
        description: "Entrega más rápida utilizando soluciones innovadoras de transporte",
      },
    ]}
  />
  </div>

  <ParallaxBanner bannerText={`Tu confianza, nuestra <span class="text-yellow-500 dark:text-yellow-400">Mejor Ruta!</span>`} />

  {/* Espacio de separación adicional */}
  <div class="py-8 md:py-12"></div>

  <!-- Nuevo separador visual con patrón geométrico que reemplaza la sección de Planes -->
  <GeometricDivider 
    title="Servicio personalizado" 
    highlightedEnd="en cada entrega" 
    description="Adaptabilidad, comunicación constante y soluciones a medida para todas tus necesidades logísticas. Mi compromiso es ofrecerte un servicio que se ajuste a tus requerimientos."
  />

  {/* Espacio de separación adicional */}
  <div class="py-8 md:py-12"></div>

  <div id="faq">
    <FAQ title="Preguntas Frecuentes" faqs={faqs} image={statsImage} />
  </div>

  <div id="contacto">
    <ContactSection_es />
  </div>

  <!-- Modal para descargar tarifas -->
  <DownloadModal />
</MainLayout>