---
import MainLayout from "@/layouts/MainLayout.astro";
import CoverageMapSection from "@components/sections/misc/CoverageMapSection_en.astro";
import { SITE } from "@data/constants";

// Define the metadata for the page
const title = "Coverage | TransCar";
const description = "Discover our service coverage throughout Spain. We offer transport and logistics services in major cities with different coverage radii.";
---

<MainLayout title={title} customDescription={description} lang="en">
  <style>
    /* Styles for cards with flip effect - improved version */
    .flip-card {
      perspective: 1000px;
      cursor: pointer;
      height: 16rem;
      width: 100%;
    }
    
    .flip-card-inner {
      position: relative;
      width: 100%;
      height: 100%;
      transition: transform 0.6s;
      transform-style: preserve-3d;
    }
    
    .flip-card:hover .flip-card-inner {
      transform: rotateY(180deg);
    }
    
    .flip-card-front, .flip-card-back {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      -webkit-backface-visibility: hidden !important;
      backface-visibility: hidden !important;
      border-radius: 0.75rem;
      overflow: hidden;
    }
    
    /* Make sure the front is initially visible */
    .flip-card-front {
      z-index: 2;
      transform: rotateY(0deg);
    }
    
    /* Make sure the back is initially flipped */
    .flip-card-back {
      transform: rotateY(180deg);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1;
    }
    
    /* Solution for browsers that don't handle backface-visibility well */
    .flip-card:hover .flip-card-front {
      opacity: 0;
      visibility: hidden;
    }
    
    .flip-card:hover .flip-card-back {
      opacity: 1;
      visibility: visible;
    }
    
    /* Hide any text on the back */
    .flip-card-back span,
    .flip-card-back p,
    .flip-card-back h1,
    .flip-card-back h2,
    .flip-card-back h3,
    .flip-card-back h4,
    .flip-card-back h5,
    .flip-card-back h6,
    .flip-card-back div:not(.flip-card-back) {
      display: none !important;
    }
    
    /* Firefox-specific styles */
    @-moz-document url-prefix() {
      .flip-card-front, .flip-card-back {
        backface-visibility: hidden !important;
      }
    }
    
    /* Safari-specific styles */
    @media not all and (min-resolution:.001dpcm) {
      @supports (-webkit-appearance:none) {
        .flip-card-front, .flip-card-back {
          -webkit-backface-visibility: hidden !important;
        }
      }
    }
  </style>
  <main class="flex-auto">
    <div id="hero">
      <CoverageMapSection />
    </div>
    
    <div id="services" class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <div class="text-center">
          <h2 class="text-2xl font-bold text-neutral-800 dark:text-neutral-200 md:text-3xl md:leading-tight">
            Transport Services Throughout Spain
          </h2>
          <p class="mt-4 text-pretty text-neutral-600 dark:text-neutral-400">
            We offer transport and logistics services in major cities across Spain.
            Our commitment is to provide efficient and reliable solutions for all your transportation needs.
          </p>
        </div>
        
        <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          <!-- Service 1 - Urban Transport -->
          <div class="flip-card">
            <div class="flip-card-inner shadow-md">
              <div class="flip-card-front border border-neutral-300 bg-white p-5 dark:border-neutral-700 dark:bg-neutral-800">
                <div class="mb-3 flex h-10 w-10 items-center justify-center rounded-lg bg-orange-100 text-orange-600 dark:bg-orange-900/30 dark:text-orange-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                  </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200">Urban Transport</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  Transport service within major cities with same-day delivery.
                </p>
              </div>
              <div class="flip-card-back border border-neutral-300 dark:border-neutral-700">
                <img src="/images/cards/01.webp" alt="" class="w-full h-full object-cover">
              </div>
            </div>
          </div>
          
          <!-- Service 2 - Scheduled Transport -->
          <div class="flip-card">
            <div class="flip-card-inner shadow-md">
              <div class="flip-card-front border border-neutral-300 bg-white p-5 dark:border-neutral-700 dark:bg-neutral-800">
                <div class="mb-3 flex h-10 w-10 items-center justify-center rounded-lg bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#3b82f6" stroke-width="1.5" class="h-5 w-5">
